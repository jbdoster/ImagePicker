 {
    "name": "ImagePicker",
    "version": "1.0",
    "description": "",
    "manifest_version": 2,
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*",
      "file://*/*",
      "ftp://*/*"
    ],
    "content_scripts": [{
      "matches":    [
        "http://*/*",
        "https://*/*",
        "file://*/*",
        "ftp://*/*"],
      "js": [
        "content.js"
      ]
   }]
  }
